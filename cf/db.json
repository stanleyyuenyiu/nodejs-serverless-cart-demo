{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Resources": {
    "Product": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "product_id",
            "AttributeType": "N"
          }
        ],
        "ProvisionedThroughput":{
          "ReadCapacityUnits" : 5,
          "WriteCapacityUnits" : 5
        },
        "KeySchema": [
          {
            "AttributeName": "product_id",
            "KeyType": "HASH"
          }
        ],
        "TableName" : "_product",
      }
    },
    "Sale": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "rule_id",
            "AttributeType": "N"
          }
        ],
        "ProvisionedThroughput":{
          "ReadCapacityUnits" : 5,
          "WriteCapacityUnits" : 5
        },
        "KeySchema": [
          {
            "AttributeName": "rule_id",
            "KeyType": "HASH"
          }
        ],
        "TableName" : "_sales_rules",
      }
    }
  }
}